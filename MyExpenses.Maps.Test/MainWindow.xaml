<Window x:Class="MyExpenses.Maps.Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyExpenses.Maps.Test"
        xmlns:wpf="clr-namespace:Mapsui.UI.Wpf;assembly=Mapsui.UI.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <wpf:MapControl x:Name="MapControl" Info="MapControl_OnInfo" ContextMenuOpening="MapControl_OnContextMenuOpening">
            <wpf:MapControl.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Option 1" Click="Option1_Click"/>
                    <MenuItem Header="Option 2" Click="Option2_Click"/>
                </ContextMenu>
            </wpf:MapControl.ContextMenu>
        </wpf:MapControl>
    </Grid>

</Window>
