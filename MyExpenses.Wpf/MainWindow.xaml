<mah:MetroWindow x:Class="MyExpenses.Wpf.MainWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:local="clr-namespace:MyExpenses.Wpf"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"

                 mc:Ignorable="d"

                 d:DesignHeight="450"
                 d:DesignWidth="800"

                 MinHeight="560"
                 MinWidth="560"

                 Title="MainWindow"

                 TitleCharacterCasing="Normal"
                 NonActiveWindowTitleBrush="Gray"
                 WindowTitleBrush="Gray"
                 BorderBrush="Gray"
                 GlowBrush="Gray"
                 NonActiveGlowBrush="Gray"

                 WindowStartupLocation="CenterScreen"
                 ResizeMode="CanResizeWithGrip"

                 Background="{DynamicResource MaterialDesignPaper}"
                 TextElement.Foreground="{DynamicResource MaterialDesignBody}"

                 DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Image Source="/Resources/Assets/Icon.png" Width="22" Height="22" />
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <materialDesign:Card Grid.Row="0" Margin="5">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Menu Grid.Column="0">
                    <MenuItem Header="{Binding MenuItemHeaderFile}"
                              BorderThickness="1.25" BorderBrush="{DynamicResource MaterialDesignBody}"
                              Margin="3">

                        <MenuItem Header="{Binding MenuItemHeaderDatabase}">
                            <MenuItem.Icon>
                                <materialDesign:PackIcon Kind="Database" />
                            </MenuItem.Icon>

                            <MenuItem Header="{Binding MenuItemHeaderExportDatabase}">
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="DatabaseExport" />
                                </MenuItem.Icon>
                            </MenuItem>

                            <MenuItem Header="{Binding MenuItemHeaderImportDatabase}">
                                <MenuItem.Icon>
                                    <materialDesign:PackIcon Kind="DatabaseImport" />
                                </MenuItem.Icon>
                            </MenuItem>

                        </MenuItem>

                    </MenuItem>

                    <!-- TODO work -->
                    <MenuItem Header="Settings"
                              BorderThickness="1.25" BorderBrush="{DynamicResource MaterialDesignBody}"
                              Margin="3">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="SettingsApplications" />
                        </MenuItem.Icon>

                    </MenuItem>

                    <MenuItem Header="Open log directory"
                              BorderThickness="1.25" BorderBrush="{DynamicResource MaterialDesignBody}"
                              Margin="3">
                        <MenuItem.Icon>
                            <materialDesign:PackIcon Kind="FolderFile" />
                        </MenuItem.Icon>
                    </MenuItem>

                </Menu>

                <!-- TODO work -->
                <Label Grid.Column="2" Content="Test" />

            </Grid>

        </materialDesign:Card>

        <Frame Grid.Row="1" x:Name="FrameBody" NavigationUIVisibility="Hidden"
               Source="Pages/DashBoardPage.xaml">
        </Frame>

    </Grid>

</mah:MetroWindow>