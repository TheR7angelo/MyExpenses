<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net8.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UseWPF>true</UseWPF>
        <ApplicationIcon>Resources\Assets\Icon.ico</ApplicationIcon>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="LiveChartsCore.SkiaSharpView.WPF" Version="2.0.0-rc2" />
      <PackageReference Include="Mapsui.Wpf" Version="4.1.5" />
      <PackageReference Include="MaterialDesignThemes" Version="5.0.0" />
      <PackageReference Include="MaterialDesignThemes.MahApps" Version="1.0.0" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\MyExpenses.Models\MyExpenses.Models.csproj" />
      <ProjectReference Include="..\MyExpenses.Sql\MyExpenses.Sql.csproj" />
      <ProjectReference Include="..\MyExpenses.Utils\MyExpenses.Utils.csproj" />
      <ProjectReference Include="..\MyExpenses.WebApi\MyExpenses.WebApi.csproj" />
      <ProjectReference Include="..\MyExpenses.Wpf.Utils\MyExpenses.Wpf.Utils.csproj" />
    </ItemGroup>

    <ItemGroup>
      <EmbeddedResource Update="Resources\Resx\DashBoard\DashBoardResources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>DashBoardResources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Resx\AddAccount\AddAccountResources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>AddAccountResources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Resx\AddEditAccountType\AddEditAccountTypeResources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>AddEditAccountTypeResources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Resx\AddEditCurrency\AddEditCurrencyResources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>AddEditCurrencyResources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Resx\AddEditCategoryType\AddEditCategoryTypeResources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>AddEditCategoryTypeResources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Resx\Windows\MainWindow\MainWindowResources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>MainWindowResource.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Resx\Pages\LocationManagementPage\LocationManagementPageResources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>LocationManagementPageResources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
      <EmbeddedResource Update="Resources\Resx\Converters\EmptyStringTreeViewConverterResources.resx">
        <Generator>ResXFileCodeGenerator</Generator>
        <LastGenOutput>EmptyStringTreeViewConverterResources.Designer.cs</LastGenOutput>
      </EmbeddedResource>
    </ItemGroup>

    <ItemGroup>
      <Compile Update="Resources\Resx\DashBoard\DashBoardResources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>DashBoardResources.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\Resx\AddAccount\AddAccountResources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>AddAccountResources.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\Resx\AddEditAccountType\AddEditAccountTypeResources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>AddEditAccountTypeResources.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\Resx\AddEditCurrency\AddEditCurrencyResources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>AddEditCurrencyResources.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\Resx\AddEditCategoryType\AddEditCategoryTypeResources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>AddEditCategoryTypeResources.resx</DependentUpon>
      </Compile>
      <None Remove="Resources\Assets\Icon.ico" />
      <Resource Include="Resources\Assets\Icon.ico">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Resource>
      <None Remove="Resources\Assets\Icon.png" />
      <Resource Include="Resources\Assets\Icon.png">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Resource>
      <None Remove="Resources\Assets\Icon.svg" />
      <Resource Include="Resources\Assets\Icon.svg">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Resource>
      <Compile Update="Resources\Resx\Pages\LocationManagementPage\LocationManagementPageResources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>LocationManagementPageResources.resx</DependentUpon>
      </Compile>
      <Compile Update="Resources\Resx\Converters\EmptyStringTreeViewConverterResources.Designer.cs">
        <DesignTime>True</DesignTime>
        <AutoGen>True</AutoGen>
        <DependentUpon>EmptyStringTreeViewConverterResources.resx</DependentUpon>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <Page Update="Windows\AddAccountWindow.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
      <Page Update="Windows\AddEditAccountTypeWindow.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
      <Page Update="Windows\AddEditCategoryTypeWindow.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
      <Page Update="Windows\AddEditCurrencyWindow.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
      <Page Update="Windows\LocationManagementWindows\AddEditLocationWindow.xaml">
        <Generator>MSBuild:Compile</Generator>
        <XamlRuntime>Wpf</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
    </ItemGroup>

    <ItemGroup>
      <AdditionalFiles Include="Resources\Maps\GreenMarker.png">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </AdditionalFiles>
      <AdditionalFiles Include="Resources\Maps\GreenMarker.svg">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </AdditionalFiles>
      <AdditionalFiles Include="Resources\Maps\RedMarker.png">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </AdditionalFiles>
      <AdditionalFiles Include="Resources\Maps\RedMarker.svg">
        <CopyToOutputDirectory>Always</CopyToOutputDirectory>
      </AdditionalFiles>
    </ItemGroup>

    <ItemGroup>
      <Content Include="..\README.md">
        <Link>README.md</Link>
      </Content>
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Resources\Resx\Windows\DashBoardPage\" />
    </ItemGroup>

</Project>
