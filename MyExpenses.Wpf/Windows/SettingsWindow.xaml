<mah:MetroWindow x:Class="MyExpenses.Wpf.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MyExpenses.Wpf.Windows"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:margin="clr-namespace:MyExpenses.Wpf.Utils.Margin;assembly=MyExpenses.Wpf.Utils"
        mc:Ignorable="d"

        Title="SettingsWindow"

        Height="450" Width="800"
        MinHeight="450" MinWidth="800"

        d:DesignHeight="450"
        d:DesignWidth="800"

        TitleCharacterCasing="Normal"
        NonActiveWindowTitleBrush="Gray"
        WindowTitleBrush="Gray"
        BorderBrush="Gray"

        ShowIconOnTitleBar="True"
        Icon="../Resources/Assets/Icon.png"

        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"

        Background="{DynamicResource MaterialDesignPaper}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"

        DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <!-- TODO add window Title -->

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TreeView Grid.Row="1" Grid.Column="0" Grid.RowSpan="2">

            <!-- TODO work -->
            <TreeViewItem x:Name="ItemAppearance"
                          Header="Appearance"
                          MouseLeftButtonUp="UIElement_OnMouseLeftButtonUp">



            </TreeViewItem>

        </TreeView>

        <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="2"
                      Width="2">
        </GridSplitter>

        <TabControl x:Name="TabControl"
                    Grid.Row="0" Grid.Column="2" Grid.RowSpan="2">

            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="{Binding Header, ElementName=ItemAppearance}">

                <materialDesign:Card Margin="5">

                    <Grid margin:PanelExtensions.MarginForAllChildren="1.75">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Row="0" Grid.Column="0">
                            <Path Fill="{Binding BackgroundPrimaryLightBrush, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Stretch="Fill">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigure StartPoint="1, 0" IsClosed="True">
                                                <LineSegment Point="1, 1" />
                                                <LineSegment Point="0, 1" />
                                                <BezierSegment Point1="0, 0" Point2="1, 0" Point3="1, 0"/>
                                            </PathFigure>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <Label Content="Primary - Light"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Foreground="{Binding ForegroundPrimaryLightBrush, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                   Background="Transparent">
                            </Label>
                        </Grid>

                        <Label Grid.Row="0" Grid.Column="1"
                               Content="Primary - Mind"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Foreground="{Binding ForegroundPrimaryMindBrush, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                               Background="{Binding BackgroundPrimaryMindBrush, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                        </Label>

                        <Grid Grid.Row="0" Grid.Column="2">
                            <Path Fill="{Binding BackgroundPrimaryDarkBrush, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Stretch="Fill">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigure StartPoint="0, 0" IsClosed="True">
                                                <LineSegment Point="0, 1" />
                                                <LineSegment Point="1, 1" />
                                                <BezierSegment Point1="1, 0" Point2="0, 0" Point3="0, 0" />
                                            </PathFigure>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <Label Content="Primary - Dark"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Foreground="{Binding ForegroundPrimaryDarkBrush, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                   Background="Transparent">
                            </Label>
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="0">
                            <Path Fill="{Binding BackgroundSecondaryLightBrush, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Stretch="Fill">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigure StartPoint="0, 0" IsClosed="True">
                                                <LineSegment Point="1, 0"/>
                                                <LineSegment Point="1, 1"/>
                                                <BezierSegment Point1="0, 1" Point2="0, 0" Point3="0, 0" />
                                            </PathFigure>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <Label Content="Secondary - Light"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Foreground="{Binding ForegroundPrimaryLightBrush, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                   Background="Transparent">
                            </Label>
                        </Grid>

                        <Label Grid.Row="1" Grid.Column="1"
                               Content="Secondary - Mind"
                               HorizontalContentAlignment="Center"
                               VerticalContentAlignment="Center"
                               Foreground="{Binding ForegroundSecondaryMindBrush, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                               Background="{Binding BackgroundSecondaryMindBrush, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                        </Label>

                        <Grid Grid.Row="1" Grid.Column="2">
                            <Path Fill="{Binding BackgroundSecondaryLightBrush, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Stretch="Fill">
                                <Path.Data>
                                    <PathGeometry>
                                        <PathGeometry.Figures>
                                            <PathFigure StartPoint="0, 1" IsClosed="True">
                                                <LineSegment Point="0, 0"/>
                                                <LineSegment Point="1, 0"/>
                                                <BezierSegment Point1="1, 0.5" Point2="0.5, 1" Point3="0, 1" />
                                            </PathFigure>
                                        </PathGeometry.Figures>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                            <Label Content="Secondary - Dark"
                                   HorizontalContentAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   Foreground="{Binding ForegroundPrimaryLightBrush, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                   Background="Transparent">
                            </Label>
                        </Grid>

                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    margin:PanelExtensions.MarginForAllChildren="5">

                            <Button Content="Primary color"
                                    Style="{StaticResource MaterialDesignPaperButton}"
                                    Click="ButtonPrimaryColor_OnClick">
                            </Button>

                            <Button Content="Secondary color"
                                    Style="{StaticResource MaterialDesignPaperSecondaryButton}"
                                    Click="ButtonSecondaryColor_OnClick">
                            </Button>

                        </StackPanel>

                    </Grid>

                </materialDesign:Card>

            </TabItem>

        </TabControl>

        <StackPanel Grid.Row="2" Grid.Column="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    margin:PanelExtensions.MarginForAllChildren="5">

            <!-- TODO Work -->
            <Button Content="Save"
                    Style="{StaticResource MaterialDesignPaperButton}">
            </Button>

            <Button Content="Cancel"
                    Style="{StaticResource MaterialDesignPaperSecondaryButton}"
                    Click="ButtonCancel_OnClick">
            </Button>

        </StackPanel>

    </Grid>

</mah:MetroWindow>
