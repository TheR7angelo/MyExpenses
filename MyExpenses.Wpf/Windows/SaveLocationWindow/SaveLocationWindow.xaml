<mah:MetroWindow x:Class="MyExpenses.Wpf.Windows.SaveLocationWindow.SaveLocationWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                 xmlns:margin="clr-namespace:MyExpenses.Wpf.Utils.Margin;assembly=MyExpenses.Wpf.Utils"
                 xmlns:system="clr-namespace:System;assembly=System.Runtime"
                 mc:Ignorable="d"

                 d:DesignHeight="130"
                 d:DesignWidth="394"

                 MinHeight="215"
                 MinWidth="435"
                 Height="215"
                 Width="435"

                 TitleCharacterCasing="Normal"
                 NonActiveWindowTitleBrush="Gray"
                 WindowTitleBrush="Gray"
                 BorderBrush="Gray"

                 ShowIconOnTitleBar="True"
                 Icon="../../Resources/Assets/Applications/Icon.png"

                 WindowStartupLocation="CenterScreen"
                 ResizeMode="CanResizeWithGrip"

                 Background="{DynamicResource MaterialDesignPaper}"
                 TextElement.Foreground="{DynamicResource MaterialDesignBody}"

                 DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid margin:PanelExtensions.MarginForAllChildren="7.5">

        <Grid.Resources>
            <system:Double x:Key="HeightRequest">96</system:Double>
            <system:Double x:Key="WidthRequest">96</system:Double>
        </Grid.Resources>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Button Grid.Column="0"
                Height="{Binding Height, RelativeSource={RelativeSource Self}}"
                Width="{Binding Height, RelativeSource={RelativeSource Self}}"
                materialDesign:ButtonAssist.CornerRadius="10"
                Style="{StaticResource MaterialDesignPaperButton}"
                Visibility="{Binding ButtonBackupVisibility, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                Click="ButtonBackup_OnClick">
            <Button.Content>
                <materialDesign:PackIcon Kind="BackupRestore" Height="{StaticResource HeightRequest}" Width="{StaticResource WidthRequest}" />
            </Button.Content>
        </Button>

        <Button Grid.Column="1"
                Height="{Binding Height, RelativeSource={RelativeSource Self}}"
                Width="{Binding Height, RelativeSource={RelativeSource Self}}"
                materialDesign:ButtonAssist.CornerRadius="10"
                Style="{StaticResource MaterialDesignPaperButton}"
                Visibility="{Binding ButtonLocalVisibility, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                Click="ButtonLocal_OnClick">
            <Button.Content>
                <materialDesign:PackIcon Kind="Laptop" Height="{StaticResource HeightRequest}" Width="{StaticResource WidthRequest}" />
            </Button.Content>
        </Button>

        <Button Grid.Column="2"
                Height="{Binding Height, RelativeSource={RelativeSource Self}}"
                Width="{Binding Height, RelativeSource={RelativeSource Self}}"
                materialDesign:ButtonAssist.CornerRadius="10"
                Style="{StaticResource MaterialDesignPaperButton}"
                Visibility="{Binding ButtonDropboxVisibility, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                Click="ButtonDropbox_OnClick">
            <Button.Content>
                <Image Source="{StaticResource DropboxLogo}" Height="{StaticResource HeightRequest}" Width="{StaticResource WidthRequest}" />
            </Button.Content>
        </Button>

        <Button Grid.Column="1"
                Height="{Binding Height, RelativeSource={RelativeSource Self}}"
                Width="{Binding Height, RelativeSource={RelativeSource Self}}"
                materialDesign:ButtonAssist.CornerRadius="10"
                Style="{StaticResource MaterialDesignPaperButton}"
                Visibility="{Binding ButtonFolderVisibility, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                Click="ButtonFolder_OnClick">
            <Button.Content>
                <materialDesign:PackIcon Kind="Folder" Height="{StaticResource HeightRequest}" Width="{StaticResource WidthRequest}" />
            </Button.Content>
        </Button>

        <!-- <Button Grid.Column="1" -->
        <!--         Height="{Binding Height, RelativeSource={RelativeSource Self}}" -->
        <!--         Width="{Binding Height, RelativeSource={RelativeSource Self}}" -->
        <!--         materialDesign:ButtonAssist.CornerRadius="10" -->
        <!--         Style="{StaticResource MaterialDesignPaperButton}" -->
        <!--         Visibility="{Binding ButtonFolderCompressVisibility, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}" -->
        <!--         Click="ButtonCompress_OnClick"> -->
        <!--     <Button.Content> -->
        <!--         <materialDesign:PackIcon Kind="FolderZip" Height="{StaticResource HeightRequest}" Width="{StaticResource WidthRequest}" /> -->
        <!--     </Button.Content> -->
        <!-- </Button> -->

        <Button Grid.Column="1"
                Height="{Binding Height, RelativeSource={RelativeSource Self}}"
                Width="{Binding Height, RelativeSource={RelativeSource Self}}"
                materialDesign:ButtonAssist.CornerRadius="10"
                Style="{StaticResource MaterialDesignPaperButton}"
                Visibility="{Binding ButtonDatabaseVisibility, Mode=OneWay, Converter={StaticResource BooleanToVisibilityConverter}}"
                Click="ButtonDatabase_OnClick">
            <Button.Content>
                <materialDesign:PackIcon Kind="Database" Height="{StaticResource HeightRequest}" Width="{StaticResource WidthRequest}" />
            </Button.Content>
        </Button>

    </Grid>

</mah:MetroWindow>