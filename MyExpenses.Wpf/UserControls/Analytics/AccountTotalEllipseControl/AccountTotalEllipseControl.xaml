<UserControl x:Class="MyExpenses.Wpf.UserControls.Analytics.AccountTotalEllipseControl.AccountTotalEllipseControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MyExpenses.Wpf.UserControls.Analytics"
             xmlns:accountTotalEllipseControl="clr-namespace:MyExpenses.Wpf.UserControls.Analytics.AccountTotalEllipseControl"
             mc:Ignorable="d"

             d:DesignHeight="300" d:DesignWidth="300">

    <Grid>

        <TabControl ItemsSource="{Binding VTotalByAccounts, Mode=OneWay, RelativeSource={RelativeSource AncestorType={x:Type accountTotalEllipseControl:AccountTotalEllipseControl}}}"
                    TabStripPlacement="Bottom">

            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </TabControl.ItemTemplate>

            <TabControl.ContentTemplate>
                <DataTemplate>
                    <accountTotalEllipseControl:StackedTotalEllipseControl VTotalByAccount="{Binding .}" />
                </DataTemplate>
            </TabControl.ContentTemplate>

        </TabControl>

    </Grid>

</UserControl>
