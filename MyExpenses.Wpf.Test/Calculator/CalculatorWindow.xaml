<mah:MetroWindow x:Class="MyExpenses.Wpf.Test.Calculator.CalculatorWindow"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:local="clr-namespace:MyExpenses.Wpf.Test.Calculator"
                 xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                 xmlns:test="clr-namespace:MyExpenses.Wpf.Test"
                 mc:Ignorable="d"

                 Title="CalculatorWindow"

                 d:DesignHeight="450"
                 d:DesignWidth="800"

                 MinHeight="450"
                 MinWidth="800"

                 TitleCharacterCasing="Normal"
                 NonActiveWindowTitleBrush="Gray"
                 WindowTitleBrush="Gray"
                 BorderBrush="Gray"
                 GlowBrush="Gray"
                 NonActiveGlowBrush="Gray"

                 WindowStartupLocation="CenterScreen"
                 ResizeMode="CanResizeWithGrip"

                 Background="{DynamicResource MaterialDesignPaper}"
                 TextElement.Foreground="{DynamicResource MaterialDesignBody}"

                 DataContext="{Binding RelativeSource={RelativeSource Self}}">

    <Grid test:PanelExtensions.MarginForAllChildren="3">

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" MinHeight="50" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4"
               HorizontalContentAlignment="Right"
               Content="{Binding TextCalculationResult, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
        </Label>

        <Button Grid.Row="2" Grid.Column="3"
                Content="/">
        </Button>

        <Button Grid.Row="2" Grid.Column="2"
                Content="←">
        </Button>

        <Button Grid.Row="2" Grid.Column="1"
                Content="C">
        </Button>

        <Button Grid.Row="2" Grid.Column="0"
                Content="CE">
        </Button>

        <Button Grid.Row="3" Grid.Column="3"
                Content="x">
        </Button>

        <Button Grid.Row="3" Grid.Column="2"
                Content="9">
        </Button>

        <Button Grid.Row="3" Grid.Column="1"
                Content="8">
        </Button>

        <Button Grid.Row="3" Grid.Column="0"
                Content="7">
        </Button>

        <Button Grid.Row="4" Grid.Column="3"
                Content="-">
        </Button>

        <Button Grid.Row="4" Grid.Column="2"
                Content="6">
        </Button>

        <Button Grid.Row="4" Grid.Column="1"
                Content="5">
        </Button>

        <Button Grid.Row="4" Grid.Column="0"
                Content="4">
        </Button>

        <Button Grid.Row="5" Grid.Column="3"
                Content="+">
        </Button>

        <Button Grid.Row="5" Grid.Column="2"
                Content="3">
        </Button>

        <Button Grid.Row="5" Grid.Column="1"
                Content="2">
        </Button>

        <Button Grid.Row="5" Grid.Column="0"
                Content="1">
        </Button>

        <Button Grid.Row="6" Grid.Column="3"
                Content="=">
        </Button>

        <Button Grid.Row="6" Grid.Column="2"
                Content=".">
        </Button>

        <Button Grid.Row="6" Grid.Column="1"
                Content="0">
        </Button>

        <Button Grid.Row="6" Grid.Column="0"
                Content="+/-"
                Click="ButtonReversePolarity_OnClick">
        </Button>

    </Grid>

</mah:MetroWindow>