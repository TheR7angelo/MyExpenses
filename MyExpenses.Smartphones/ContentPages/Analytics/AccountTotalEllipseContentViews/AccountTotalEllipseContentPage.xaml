<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyExpenses.Smartphones.ContentPages.Analytics.AccountTotalEllipseContentViews.AccountTotalEllipseContentPage"
             Title="{Binding AccountTotalEllipseContentPageTitle, Mode=OneWay}"
             xmlns:material="http://schemas.enisn-projects.io/dotnet/maui/uraniumui/material"
             xmlns:accountTotalEllipseContentViews="clr-namespace:MyExpenses.Smartphones.ContentPages.Analytics.AccountTotalEllipseContentViews"

             BindingContext="{Binding Source={RelativeSource Self}}">

    <ContentPage.Content>

        <material:TabView ItemsSource="{Binding VTotalByAccountAnalyses, Mode=OneWay}"
                          TabPlacement="Bottom">

            <material:TabView.ItemTemplate>
                <DataTemplate>
                    <accountTotalEllipseContentViews:StackedTotalEllipseContentView VTotalByAccount="{Binding .Content}" />
                </DataTemplate>
            </material:TabView.ItemTemplate>

        </material:TabView>

    </ContentPage.Content>

</ContentPage>