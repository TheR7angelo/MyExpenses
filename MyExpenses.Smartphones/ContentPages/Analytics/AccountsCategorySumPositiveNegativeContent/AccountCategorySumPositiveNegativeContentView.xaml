<?xml version="1.0" encoding="utf-8"?>

<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maui="clr-namespace:LiveChartsCore.SkiaSharpView.Maui;assembly=LiveChartsCore.SkiaSharpView.Maui"
             x:Class="MyExpenses.Smartphones.ContentPages.Analytics.AccountsCategorySumPositiveNegativeContent.AccountCategorySumPositiveNegativeContentView"

             BindingContextChanged="AccountCategorySumPositiveNegativeContentView_OnBindingContextChanged"
             x:Name="This">

    <ContentView.Content>

        <maui:CartesianChart Series="{Binding Series, Source={Reference This}}"
                             LegendTextPaint="{Binding TextPaint, Source={Reference This}}"
                             LegendPosition="Left"
                             ZoomMode="X"
                             x:Name="CartesianChart">
        </maui:CartesianChart>

    </ContentView.Content>

</ContentView>