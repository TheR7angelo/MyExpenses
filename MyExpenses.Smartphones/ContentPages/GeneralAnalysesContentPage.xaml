<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:margin="clr-namespace:MyExpenses.Maui.Utils.Margin;assembly=MyExpenses.Maui.Utils"
             x:Class="MyExpenses.Smartphones.ContentPages.GeneralAnalysesContentPage"
             BindingContext="{Binding Source={RelativeSource Self}}">

    <ContentPage.Content>

        <ScrollView VerticalOptions="Center">

            <VerticalStackLayout margin:LayoutExtensions.MarginForAllChildren="5">

                <Button Text="{Binding ButtonTextAccountAnalyzedByMonth, Mode=OneWay}"
                        Style="{StaticResource RaisedMidButton}"
                        Clicked="ButtonAccountAnalyzedByMonth_OnClicked">
                </Button>

            </VerticalStackLayout>

        </ScrollView>

    </ContentPage.Content>

</ContentPage>