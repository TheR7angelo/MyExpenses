<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                    xmlns:uraniumButtonView="clr-namespace:MyExpenses.Smartphones.UserControls.Buttons.UraniumButtonView">

    <Style x:Key="BaseButtonViewStyle" TargetType="uraniumButtonView:UraniumButtonView">
        <Setter Property="StrokeShape" Value="{RoundRectangle CornerRadius=50}" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="PathHorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="PathVerticalOptions" Value="Center" />
        <Setter Property="Padding" Value="10" />
    </Style>

    <Style x:Key="ButtonViewPrimaryDark" TargetType="uraniumButtonView:UraniumButtonView"
           ApplyToDerivedTypes="True" CanCascade="True" BasedOn="{StaticResource BaseButtonViewStyle}">

        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryDark}" />
        <Setter Property="PathFillColor" Value="{StaticResource PrimaryDarkForeground}" />

    </Style>

    <Style x:Key="ButtonViewSecondaryDark" TargetType="uraniumButtonView:UraniumButtonView"
           ApplyToDerivedTypes="True" CanCascade="True" BasedOn="{StaticResource BaseButtonViewStyle}">

        <Setter Property="BackgroundColor" Value="{StaticResource SecondaryDark}" />
        <Setter Property="PathFillColor" Value="{StaticResource SecondaryDarkForeground}" />

    </Style>

    <Style x:Key="ButtonViewPrimaryMid" TargetType="uraniumButtonView:UraniumButtonView"
           ApplyToDerivedTypes="True" CanCascade="True" BasedOn="{StaticResource BaseButtonViewStyle}">

        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryMid}" />
        <Setter Property="PathFillColor" Value="{StaticResource PrimaryMidForeground}" />

    </Style>

    <Style x:Key="ButtonViewPrimaryLight" TargetType="uraniumButtonView:UraniumButtonView"
           ApplyToDerivedTypes="True" CanCascade="True" BasedOn="{StaticResource BaseButtonViewStyle}">

        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryLight}" />
        <Setter Property="PathFillColor" Value="{StaticResource PrimaryLightForeground}" />

    </Style>

</ResourceDictionary>