                        </Button>

                        <Button Style="{StaticResource PaperSecondaryDarkButton}"
                                Text="Click me"
                                Clicked="OnCounterClicked">
                        </Button>

                    </HorizontalStackLayout>

                </VerticalStackLayout>

            </Frame>

        </VerticalStackLayout>

    </ContentView.Content>

</ContentView>