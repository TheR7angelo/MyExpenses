                                Text="+"
                                Clicked="OnCounterClicked">
                        </Button>

                    </HorizontalStackLayout>

                    <HorizontalStackLayout HorizontalOptions="Center"
                                           Spacing="5">

                        <Button Style="{StaticResource FloatingActionSecondaryLightButton}"
                                Text="+"
                                Clicked="OnCounterClicked">
                        </Button>

                        <Button Style="{StaticResource FloatingActionSecondaryMidButton}"
                                Text="+"
                                Clicked="OnCounterClicked">
                        </Button>

                        <Button Style="{StaticResource FloatingActionSecondaryDarkButton}"
                                Text="+"
                                Clicked="OnCounterClicked">
                        </Button>

                    </HorizontalStackLayout>

                </VerticalStackLayout>

            </Frame>

            <Frame BorderColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                   CornerRadius="10"
                   HasShadow="False">

                <VerticalStackLayout Spacing="5">

                    <Label Text="PaperButton" HorizontalOptions="Center" HorizontalTextAlignment="Center" />

                    <HorizontalStackLayout HorizontalOptions="Center"
