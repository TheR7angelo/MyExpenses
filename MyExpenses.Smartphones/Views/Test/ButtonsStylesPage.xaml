                                Text="+"
                                Clicked="OnCounterClicked">
                        </Button>

                        <Button Style="{StaticResource FloatingActionMiniSecondaryDarkButton}"
                                Text="+"
                                Clicked="OnCounterClicked">
                        </Button>

                    </HorizontalStackLayout>

                </VerticalStackLayout>

            </Frame>

            <Frame BorderColor="{AppThemeBinding Light={StaticResource Black}, Dark={StaticResource White}}"
                   CornerRadius="10"
                   HasShadow="False">

                <VerticalStackLayout Spacing="5">

                    <Label Text="FloatingActionButton" HorizontalOptions="Center" HorizontalTextAlignment="Center" />

                    <HorizontalStackLayout HorizontalOptions="Center"
                                           Spacing="5">

                        <Button Style="{StaticResource FloatingActionLightButton}"
                                Text="+"
